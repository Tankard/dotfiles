[user]
	name = tankard
	email = tankard@yandex.ru
[credential]
	helper = osxkeychain
[push]
	default = upstream
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[core]
	excludesfile = ~/.dotfiles/gitignore
	editor = vim
[diff]
  compactionHeuristic = true
[fetch]
	prune = true
[merge]
	ff = only
[status]
  showUntrackedFiles = all
[alias]
  aa = add --all
  unstage = reset
  dc = diff --word-diff --cached --color-words
  df = diff --word-diff --color-words
  co = checkout
  b = branch
  conflicted = !vim +Conflicted
  master = checkout master
  pl = pull
  ps = push
  ri = rebase -i
  rbc = rebase --continue
  stat = show --stat
  si = status --ignored
  sl = log --oneline --decorate --graph -20
  slap = log --oneline --decorate --all --graph
  slp = log --oneline --decorate --graph
  uncommit = reset --soft HEAD^
  reset = reset HEAD --hard
  cm = commit -m
  stash-all = stash save --include-untracked
